@{
    ViewData["Title"] = "Home Page";
}
@section Scripts{
    <script>
            function sumButtonClick() {
              p1 = document.getElementById("number1").value;
              p2 = document.getElementById("number2").value;
              result= p1 * p2; 
              document.getElementById("demo").innerHTML = result;
              //alert("The sum of the two numbers is: " + sum); 
              } 
    </script>
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
    <p>We are getting started with a simple addition, Please write two numbers below.</a>.</p>
    <p><input type="number" id = "number1" placeholder="123" class = "form-control w-25" rows="3" /></p>
    <p><input type="number" id = "number2" placeholder="123" class = "form-control w-25" rows="3" /></p>
    <input type="range" class="form-control-range" id="formControlRange" min=1 max = 100>
    <p id="demo"></p>
    <p></p>
    <button onclick="sumButtonClick()" class="btn btn-primary">sum</button>
</div>
